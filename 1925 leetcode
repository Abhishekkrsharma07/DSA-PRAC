import java.util.*;

class Main {

    public static int countTriplets(int[] nums, int target) {
        Arrays.sort(nums); // sorting is required for two-pointer
        int n = nums.length;
        int count = 0;

        for (int i = 0; i < n - 2; i++) {
            int left = i + 1;
            int right = n - 1;

            // second loop replaced by two-pointer movement
            while (left < right) {
                int sum = nums[i] + nums[left] + nums[right];

                if (sum < target) {
                    // all values between left and right form valid triplets
                    count += right - left;        

                    left++;
                } else {
                    right--;
                }
            }
        }

        return count;
    }

    public static void main(String[] args) {
        int[] nums = { -2, 0, 1, 3 };
        int target = 2;

        System.out.println(countTriplets(nums, target));
    }
}
